<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h3 class="card-title mb-4 text-center">アカウント登録</h3>

          <%= form_with model: @user, url: users_path, local: true do |f| %>
            <%= render 'shared/error_messages', object: @user %>
            <div class="mb-3">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: "form-control #{'is-invalid' if f.object.errors[:name].any?}", placeholder: "例: 山田 太郎", required: true,aria: { describedby: ("nameHelp" if f.object.errors[:name].any?) } %>
              <% if f.object.errors[:name].any? %>
                <div id="nameHelp" class="invalid-feedback">
                  <%= f.object.errors.full_messages_for(:name).join(', ') %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :email_address, class: "form-label" %>
              <%= f.email_field :email_address, class: "form-control #{'is-invalid' if f.object.errors[:email_address].any?}", placeholder: "name@example.com", required: true, aria: { describedby: ("emailHelp" if f.object.errors[:email_address].any?) } %>
              <% if f.object.errors[:email_address].any? %>
                <div id="emailHelp" class="invalid-feedback">
                  <%= f.object.errors.full_messages_for(:email_address).join(', ') %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control #{'is-invalid' if f.object.errors[:password].any?}", required: true, aria: { describedby: ("passwordHelp" if f.object.errors[:password].any?) } %>
              <% if f.object.errors[:password].any? %>
                <div id="passwordHelp" class="invalid-feedback">
                  <%= f.object.errors.full_messages_for(:password).join(', ') %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control #{'is-invalid' if f.object.errors[:password_confirmation].any?}", required: true, aria: { describedby: ("passwordConfirmationHelp" if f.object.errors[:password_confirmation].any?) } %>
              <% if f.object.errors[:password_confirmation].any? %>
                <div id="passwordConfirmationHelp" class="invalid-feedback">
                  <%= f.object.errors.full_messages_for(:password_confirmation).join(', ') %>
                </div>
              <% end %>
            </div>

            <div class="d-grid">
              <%= f.submit "登録", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>