<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">
          <i class="bi bi-people-fill me-2"></i>貸出管理
        </h1>
        <div>
          <span class="badge bg-primary fs-6">
            総貸出数: <%= @lendings.count %>
          </span>
          <span class="badge bg-warning fs-6 ms-2">
            貸出中: <%= @lendings.unreturned.count %>
          </span>
        </div>
      </div>

      <%= render "shared/lending_history", 
                 lendings: @lendings, 
                 show_user_info: true %>
    </div>
  </div>
</div>